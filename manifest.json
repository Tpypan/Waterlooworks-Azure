{
  "name": "WaterlooWorks Azure (Community Edition)",
  "short_name": "WW Azure",
  "version": "4.0.0",
  "manifest_version": 3,
  "description": "Enhance your WaterlooWorks experience with themes, layout improvements, and workflow optimizations.",
  "author": "Community Fork",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "WaterlooWorks Azure"
  },

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://waterlooworks.uwaterloo.ca/*"],
      "css": [
        "ui/themes/base.css",
        "ui/layout/keyboard-nav.css"
      ],
      "js": [
        "utils/storage.js",
        "utils/selectors.js",
        "utils/compatibility.js",
        "content/feature-flags.js",
        "content/observers.js",
        "content/dom-hooks.js",
        "content/keyboard-nav.js",
        "content/job-info-rearranger.js",
        "content/inject.js"
      ],
      "run_at": "document_end"
    }
  ],

  "options_page": "options/options.html",

  "permissions": [
    "storage",
    "contextMenus"
  ],

  "host_permissions": [
    "https://waterlooworks.uwaterloo.ca/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ui/themes/*.css",
        "ui/layout/*.css",
        "ui/components/*.css",
        "icons/*.png"
      ],
      "matches": ["https://waterlooworks.uwaterloo.ca/*"]
    }
  ]
}
